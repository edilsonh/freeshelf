<h1>Signup!</h1>

<% if @user.errors.any? %>
  <h2>Please correct the problems below before signing up.</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
  </ul>
<% end %>
  <%= form_for :user, url: users_path do |f| %>
  <table>
    <tr><td>Email:</td><td><%= f.text_field :email %></td></tr>
    <tr><td>Password:</td><td><%= f.password_field :password %></td></tr>
  </table>

  <%= f.submit "Sign me up" %>
<% end %>
