<h1>Signup!</h1>

<% if @user.errors.any? %>
  <h2>Please correct the problems below before signing up.</h2>
  <ul>
    <% @users.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
  </ul>
<% end %>
  <%= form_for :user, url: users_path do |f| %>
    Email: <%= f.text_field :email %>
    Password: <%= f.password_field :password %>

  <%= f.submit "Sign me up" %>
<% end %>
